<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/background_secondary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/exercise_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/complete_button"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/exercise_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise Name"
                android:textColor="@color/midnight_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/exercise_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 sets Ã— 12 reps"
                android:textColor="@color/charcoal_gray"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <Button
            android:id="@+id/complete_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Done"
            android:textColor="@color/snow_white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/btn_outline"
            android:paddingHorizontal="16dp"
            android:minWidth="0dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>